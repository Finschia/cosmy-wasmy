{
  "name": "cosmy-wasmy",
  "displayName": "cosmy wasmy",
  "description": "wibbly wobbly cosmy wasmy tool to interact with cosmwasm contracts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cosmy-wasmy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cosmy-wasmy.addAccount",
        "title": "Add Account",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.copyAddress",
        "title": "Copy Address",
        "enablement": "viewItem == account || viewItem == contract",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.copyMnemonic",
        "title": "Copy Mnemonic",
        "enablement": "viewItem == account",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.deleteAccount",
        "title": "Delete Account",
        "enablement": "viewItem == account",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.addContract",
        "title": "Add Contract",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.deleteContract",
        "title": "Delete Contract",
        "enablement": "viewItem == contract",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      },
      {
        "command": "cosmy-wasmy.resetData",
        "title": "Cosmy Wasmy: Reset Data"
      }
    ],
    "configuration": [
      {
        "title": "Cosmy Wasmy",
        "properties": {
          "chainName": {
            "type": "string",
            "markdownDescription": "User friendly name for this chain cofiguration",
            "scope": "resource",
            "order": 0
          },
          "addressPrefix": {
            "type": "string",
            "markdownDescription": "Chain address prefix `juno`",
            "scope": "resource",
            "order": 1
          },
          "rpcEndpoint": {
            "type": "string",
            "markdownDescription": "RPC endpoint",
            "scope": "resource",
            "order": 2
          }
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cosmy-wasmy.addAccount",
          "when": "view == account",
          "group": "navigation"
        },
        {
          "command": "cosmy-wasmy.addContract",
          "when": "view == contract",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cosmy-wasmy.copyAddress",
          "when": "view == account || view == contract",
          "group": "inline"
        },
        {
          "command": "cosmy-wasmy.copyMnemonic",
          "when": "view == account",
          "group": "inline"
        },
        {
          "command": "cosmy-wasmy.deleteAccount",
          "when": "view == account",
          "group": "inline"
        },
        {
          "command": "cosmy-wasmy.deleteContract",
          "when": "view == contract",
          "group": "inline"
        }
      ]
    },
    "views": {
      "cosmy-wasmy": [
        {
          "id": "account",
          "name": "Account",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "contract",
          "name": "Contract",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "initiate",
          "name": "Initiate",
          "type": "tree",
          "visibility": "collapsed"
        },
        {
          "id": "migrate",
          "name": "Migrate",
          "type": "tree",
          "visibility": "collapsed"
        },
        {
          "id": "query",
          "name": "Query",
          "type": "webview",
          "visibility": "visible"
        },
        {
          "id": "execute",
          "name": "Execute",
          "type": "webview",
          "visibility": "visible"
        },
        {
          "id": "sign",
          "name": "Sign",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cosmy-wasmy",
          "title": "Cosmy Wasmy",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "account",
        "contents": "‚ö†Ô∏è Looks like there are no accounts set up. \n [Add an account](command:cosmy-wasmy.addAccount)"
      },
      {
        "view": "contract",
        "contents": "‚ö†Ô∏è Looks like there are no contracts are import. \n [Import a contract](command:cosmy-wasmy.addContract)"
      },
      {
        "view": "initiate",
        "contents": "‚ùå Feature not yet implemented ü•∫"
      },
      {
        "view": "migrate",
        "contents": "‚ùå Feature not yet implemented ü•∫"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.28.4",
    "@cosmjs/cosmwasm-stargate": "^0.28.4",
    "@cosmjs/launchpad": "^0.27.1",
    "@cosmjs/proto-signing": "^0.28.4"
  }
}
